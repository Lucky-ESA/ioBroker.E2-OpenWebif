{
    "i18n": true,
    "type": "tabs",
    "items": {
        "tab1": {
            "type": "panel",
            "label": "Tab Device",
            "items": {
                "_headerAdapter": {
                    "type": "header",
                    "text": "e2-openwebif adapter settings",
                    "size": 2
                },
                "devices": {
                    "newLine": true,
                    "sm": 12,
                    "noDelete": false,
                    "type": "table",
                    "items": [
                        {
                            "type": "checkbox",
                            "attr": "activ",
                            "title": "Activ",
                            "tooltip": "Activate",
                            "filter": false,
                            "sort": false,
                            "default": false,
                            "style": {
                                "textAlign": "center",
                                "width": 60
                            }
                        },
                        {
                            "type": "text",
                            "attr": "ip",
                            "title": "IP",
                            "tooltip": "Device IP",
                            "filter": true,
                            "sort": true,
                            "default": "127.0.0.1",
                            "style": {
                                "width": 150
                            }
                        },
                        {
                            "type": "number",
                            "attr": "port",
                            "title": "Port",
                            "tooltip": "Port",
                            "filter": false,
                            "sort": false,
                            "default": 80,
                            "style": {
                                "textAlign": "center",
                                "width": 60
                            }
                        },
                        {
                            "type": "text",
                            "attr": "user",
                            "title": "User",
                            "tooltip": "User",
                            "filter": false,
                            "sort": false,
                            "default": "root",
                            "style": {
                                "width": 100
                            }
                        },
                        {
                            "type": "password",
                            "attr": "password",
                            "title": "PASSWORD",
                            "tooltip": "Password",
                            "filter": false,
                            "visible": true,
                            "sort": false,
                            "default": "",
                            "style": {
                                "width": 150
                            }
                        },
                        {
                            "type": "checkbox",
                            "attr": "https",
                            "title": "HTTPS",
                            "tooltip": "Use HTTPS",
                            "filter": false,
                            "sort": false,
                            "default": false,
                            "style": {
                                "textAlign": "center",
                                "width": 60
                            }
                        },
                        {
                            "type": "checkbox",
                            "attr": "ssh",
                            "title": "SSH",
                            "tooltip": "SSH connection",
                            "filter": false,
                            "sort": false,
                            "default": false,
                            "style": {
                                "textAlign": "center",
                                "width": 60
                            }
                        },
                        {
                            "type": "text",
                            "attr": "sshuser",
                            "title": "sshUser",
                            "tooltip": "SSHUser",
                            "filter": false,
                            "sort": false,
                            "default": "root",
                            "style": {
                                "width": 100
                            }
                        },
                        {
                            "type": "password",
                            "attr": "sshpassword",
                            "title": "SSHPASSWORD",
                            "tooltip": "SSHPassword",
                            "filter": false,
                            "visible": true,
                            "sort": false,
                            "default": "",
                            "style": {
                                "width": 150
                            }
                        },
                        {
                            "type": "text",
                            "attr": "mac",
                            "title": "YOUR MAC",
                            "tooltip": "MAC",
                            "filter": false,
                            "sort": false,
                            "default": "",
                            "style": {
                                "width": 150
                            }
                        },
                        {
                            "type": "selectSendTo",
                            "title": "icon64",
                            "tooltip": "ICON64",
                            "attr": "picture",
                            "disabled": "!data.activ",
                            "jsonData": "{\"icon\":{\"icons\":${JSON.stringify(globalData.icons)}}}",
                            "command": "getIconList",
                            "width": 200,
                            "alsoDependsOn": ["icons"],
                            "style": {
                                "textAlign": "center",
                                "width": 200
                            }
                        }
                    ]
                },
                "dividerafterdevice": {
                    "newLine": true,
                    "type": "divider"
                },
                "interval": {
                    "type": "number",
                    "newLine": true,
                    "sm": 3,
                    "label": "Interval",
                    "default": 5,
                    "min": 1,
                    "max": 3600,
                    "step": 1
                },
                "your_ip": {
                    "type": "ip",
                    "newLine": true,
                    "onlyIp4": true,
                    "sm": 3,
                    "label": "Your IP",
                    "default": ""
                },
                "boottime": {
                    "type": "number",
                    "newLine": true,
                    "sm": 3,
                    "label": "BOOTTIME",
                    "default": 20,
                    "min": 0,
                    "max": 120,
                    "step": 1
                },
                "simple_api": {
                    "newLine": true,
                    "type": "instance",
                    "label": "source",
                    "sm": 12,
                    "md": 6,
                    "lg": 3,
                    "adapter": "simple-api",
                    "default": ""
                }
            }
        },
