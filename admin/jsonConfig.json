                "_headerOwnAlexa": {
                    "type": "header",
                    "text": "Own Alexa data points",
                    "size": 2
                },
                "own_alexa": {
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "noDelete": false,
                    "type": "table",
                    "hidden": "!_alive",
                    "style": {
                        "textAlign": "center"
                    },
                    "items": [
                        {
                            "type": "checkbox",
                            "title": "Activ",
                            "width": "10%",
                            "attr": "own_alexa",
                            "allowAddByFilter": false,
                            "filter": true,
                            "sort": true,
                            "default": false,
                            "style": {
                                "textAlign": "center"
                            }
                        },
                        {
                            "type": "selectSendTo",
                            "title": "Datapoint",
                            "width": "10%",
                            "attr": "own_datapoint",
                            "disabled": "!data.own_alexa || data.own_datapoint != null",
                            "command": "getDatapoint",
                            "filter": false,
                            "jsonData": "{\"alexaid\":{\"own_command\":\"${data.own_command}\",\"own_name\":\"${data.own_name}\",\"own_device\":\"${data.own_device}\",\"own_datapoint\":\"${data.own_datapoint}\",\"alexaToDevice\":${JSON.stringify(globalData.own_alexa)}}}",
                            "sort": false,
                            "alsoDependsOn": ["own_alexa", "own_device", "own_name", "devices", "own_command"]
                        },
                        {
                            "type": "selectSendTo",
                            "title": "BOX IP",
                            "attr": "own_device",
                            "disabled": "!data.own_alexa",
                            "jsonData": "{\"box\":{\"devices\":${JSON.stringify(globalData.devices)},\"own_alexa\":${JSON.stringify(globalData.own_alexa)}}}",
                            "command": "getDevicesList",
                            "width": "20%",
                            "filter": false,
                            "sort": false,
                            "alsoDependsOn": ["own_alexa", "own_device", "devices", "own_alexa"]
                        },
                        {
                            "type": "text",
                            "title": "OWN NAME",
                            "width": "30%",
                            "attr": "own_name",
                            "disabled": "!data.own_alexa",
                            "default": "",
                            "filter": false,
                            "sort": false
                        },
                        {
                            "type": "text",
                            "title": "OWN COMMAND",
                            "width": "40%",
                            "attr": "own_command",
                            "disabled": "!data.own_alexa",
                            "default": "",
                            "filter": false,
                            "sort": false
